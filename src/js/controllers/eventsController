app.controller("eventsController", ["eventsUtil", "$scope", "detailsUtil", "$state" ,
    function (eventsUtil, $scope, detailsUtil, $state) {

        $scope.events = eventsUtil.getEvents();

        $scope.showDetail = function (event) {
            detailsUtil.setEvent(event);
           // $state.go("eventsDetail");
            $state.reload();
        }

    }]);